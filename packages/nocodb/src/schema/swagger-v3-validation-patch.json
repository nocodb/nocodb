{
  "components": {
    "schemas": {
      "CreateField": {
        "allOf": [
          {
            "$ref": "#/components/schemas/FieldBaseCreate"
          }
        ]
      },
      "FieldUpdate": {
        "allOf": [
          {
            "$ref": "#/components/schemas/FieldBase"
          }
        ]
      },
      "ViewCreate": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/ViewBase"
          },
          {
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "GRID",
                  "GALLERY",
                  "KANBAN",
                  "CALENDAR",
                  "FORM"
                ],
                "description": "Type of the view."
              }
            },
            "required": [
              "type",
              "name"
            ]
          }
        ]
      },
      "ViewUpdate": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/ViewBase"
          },
          {
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid",
                "description": "Unique identifier for the view."
              }
            }
          }
        ]
      }
    }
  }
}