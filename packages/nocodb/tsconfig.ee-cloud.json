{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "~/*": [
        "./src/ee-cloud/*",
        "./src/ee/*",
        "./src/*"
      ],
      "@/*": [
        "./src/ee-cloud/*",
        "./src/ee/*",
        "./src/*"
      ],
      "@noco-local-integrations/*": [
        "../noco-integrations/packages/*",
      ],
      "@noco-local-integrations/core": [
        "../noco-integrations/core"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  }
}
