{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "~/*": [
        "./src/ee-on-prem/*",
        "./src/ee/*",
        "./src/*"
      ],
      "@/*": [
        "./src/ee-on-prem/*",
        "./src/ee/*",
        "./src/*"
      ],
      "@noco-local-integrations/*": [
        "../noco-integrations/packages/*"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  }
}
