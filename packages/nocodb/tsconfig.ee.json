{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "~/*": [
        "./src/ee/*",
        "./src/*"
      ],
      "@/*": [
        "./src/ee/*",
        "./src/*"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/ee-on-prem",
    "./src/ee-cloud",
    "./src/**/*.spec.ts",
    "./src/ee/controllers/dashboards/**",
    "./src/ee/controllers/docs/**",
    "./src/ee/services/dashboards/**",
    "./src/ee/services/docs/**",
    "./src/ee/daos/**"
  ]
}
